[MASTER]
# Disable all checks and then enable specific ones
disable=all
enable=invalid-name

[FORMAT]
# Naming style for functions and variables
variable-rgx=[a-z_][a-z0-9_]*$
function-rgx=[a-z_][a-z0-9_]*$
class-rgx=[A-Z][a-zA-Z0-9]+$
constant-rgx=[A-Z_][A-Z0-9_]*$

# Custom error message for invalid names
variable-message="Variable name should be in snake_case."
function-message="Function name should be in snake_case."
class-message="Class name should be in CamelCase."
constant-message="Constant name should be in UPPER_SNAKE_CASE."
